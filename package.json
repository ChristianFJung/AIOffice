{
  "name": "aioffice",
  "version": "0.1.0",
  "description": "A pixel-art virtual office where AI coding agents work at desks â€” watch Claude and Copilot build software in real-time.",
  "private": true,
  "bin": {
    "officeagent": "./bin/officeagent"
  },
  "workspaces": [
    "apps/web",
    "apps/server",
    "apps/officeagent",
    "shared"
  ],
  "scripts": {
    "postinstall": "ln -sf ../../bin/officeagent node_modules/.bin/officeagent 2>/dev/null || true",
    "dev": "npm run dev:server & npm run dev:web",
    "dev:server": "npm --workspace apps/server run dev",
    "dev:web": "npm --workspace apps/web run dev",
    "build:server": "npm --workspace apps/server run build",
    "build:web": "npm --workspace apps/web run build",
    "test": "npx playwright test",
    "agent": "npx tsx apps/officeagent/src/index.ts",
    "start": "npx tsx apps/officeagent/src/index.ts start",
    "demo": "npx tsx apps/officeagent/src/index.ts demo"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "playwright": "^1.58.2"
  }
}
